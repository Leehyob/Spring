<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.trip.mapper.BoardMapper">


	<select id="selectImg" resultType="kr.trip.domain.BoardVO">
		select image from board where board_id = #{board_id}
	</select>
	
	<!-- 게시글 작성 -->
<insert id="insert" parameterType="kr.trip.domain.BoardVO">
    INSERT INTO board (member_email, title, content, image)
    VALUES (#{member_email}, #{title}, #{content}, #{image})
</insert>
	
	
	   <!-- 게시글 읽기 -->
   <select id="read" resultType="kr.trip.domain.BoardVO">
      select * from board where board_id = #{board_id}
   </select>
	
</mapper>